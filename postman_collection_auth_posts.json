{
  "info": {
    "name": "API Auth + Posts (Clase 3)",
    "_postman_id": "0c9fb16b-095b-424c-88db-36cc44af24c5",
    "description": "ColecciÃ³n con registro, login (JWT) y CRUD de posts protegido.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "postId",
      "value": ""
    },
    {
      "key": "email",
      "value": "axel@example.com"
    },
    {
      "key": "password",
      "value": "SuperSecreto123"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', () => pm.response.to.have.status(200));"
            ]
          }
        }
      ]
    },
    {
      "name": "Users - Register",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/users",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Axel\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"bio\": \"Dev junior en progreso\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('201 Created', () => pm.response.to.have.status(201));"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/login",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', () => pm.response.to.have.status(200));",
              "const data = pm.response.json();",
              "pm.test('Tiene token', () => pm.expect(data).to.have.property('token'));",
              "pm.collectionVariables.set('token', data.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Posts - List (NO AUTH)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/posts"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('401 Unauthorized', () => pm.response.to.have.status(401));"
            ]
          }
        }
      ]
    },
    {
      "name": "Posts - Create",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/posts",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Post autenticado\",\n  \"text\": \"Contenido bajo token\",\n  \"author\": \"Axel\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('201 Created', () => pm.response.to.have.status(201));",
              "const data = pm.response.json();",
              "pm.collectionVariables.set('postId', data.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Posts - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/posts",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ]
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', () => pm.response.to.have.status(200));"
            ]
          }
        }
      ]
    },
    {
      "name": "Posts - Get by id",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/posts/{{postId}}",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ]
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', () => pm.response.to.have.status(200));"
            ]
          }
        }
      ]
    },
    {
      "name": "Posts - Patch",
      "request": {
        "method": "PATCH",
        "url": "{{baseUrl}}/api/posts/{{postId}}",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"TÃ­tulo con token\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', () => pm.response.to.have.status(200));"
            ]
          }
        }
      ]
    },
    {
      "name": "Posts - Delete",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/posts/{{postId}}",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ]
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('204 No Content', () => pm.response.to.have.status(204));"
            ]
          }
        }
      ]
    }
  ]
}